[init]
	defaultBranch = main
[user]
	email = zinc.vitaliy@gmail.com
	name = zivit
[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[core]
    pager = delta
	editor = nvim
[interactive]
    diffFilter = delta --color-only
[delta]
    syntax-theme = OneHalfDark
    navigate = true
    light = false
    features = side-by-side line-numbers decorations
    plus-style = syntax "#002800"
    plus-emph-style = syntax "#006800"
    minus-style = syntax "#2f0001"
    minus-emph-style = syntax "#6f0001"
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[code]
	editor = --list
